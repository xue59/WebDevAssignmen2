html 
  head 
    title= "List of all shopping items" 
    style
        include ../public/stylesheets/style.css
  body 
    h2 Here is the item you want to change: 
    form(action=`/updateAnItem/${anItem._id}`, method='post')
        table(style='width:100%', border='1')
            tr 
                th _id
                th Item Name 
                th Amount 
                th Price 
                th Notes
                th(class='action') Action: 
            tr 
                td(class='db_id') #{anItem._id}
                td 
                    label(for='itemName')
                    input(type='text', id='itemName', name='itemName', value=`${anItem.itemName}`)
                td
                    label(for='amount')
                    input(type='text', id='amount', name='amount', value=`${anItem.amount}`)
                td 
                    label(for='price')
                    input(type='text', id='price', name='price', value=`${anItem.price}`)
                td 
                    label(for='notes')
                    input(type='text', id='notes', name='notes', value=`${anItem.notes}`)
                td(class='action') 
                    input(type='submit', value="Confirm update")
